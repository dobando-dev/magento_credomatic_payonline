{
    $txtTitle = 'Credit Card Information';
    $txtSubtitle = 'Please enter your card information.';
    $txtSubmit = 'Submit';
    $txtCreditCardNumber = 'Card Number';
    $txtExpiration = 'Expiration Date';
    $txtCvv = 'Security Code';
}

